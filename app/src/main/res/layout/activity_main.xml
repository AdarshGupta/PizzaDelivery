<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adarshgupta.pizzadelivery.MainActivity"
    android:background="#333333">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIZZA DELIVERY"
            android:id="@+id/textView"
            android:textSize="36dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:shadowColor="#000000"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="#84ffff" />

        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#99ffffff"
            android:textSize="30dp"
            android:layout_marginBottom="10dp" />

        <!--Country special pizza-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="-"
                android:textSize="30dp"
                android:layout_gravity="left"
                android:background="#ff7674"
                android:textAlignment="center"
                android:onClick="decrementCS"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Country Special"
                android:textSize="18dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#00c853" />
            <Button
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="+"
                android:textSize="30dp"
                android:layout_gravity="right"
                android:background="#70ffc3"
                android:textAlignment="center"
                android:onClick="incrementCS"/>

        </LinearLayout>

        <!--Farmhouse-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="-"
                android:textSize="30dp"
                android:layout_gravity="left"
                android:background="#ff7674"
                android:textAlignment="center"
                android:onClick="decrementF"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Farmhouse"
                android:textSize="18dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#00c853" />
            <Button
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="+"
                android:textSize="30dp"
                android:layout_gravity="right"
                android:background="#70ffc3"
                android:textAlignment="center"
                android:onClick="incrementF"/>

        </LinearLayout>

        <!--Barbeque Chicken-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="-"
                android:textSize="30dp"
                android:layout_gravity="left"
                android:background="#ff7674"
                android:textAlignment="center"
                android:onClick="decrementBC"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Barbeque Chicken"
                android:textSize="18dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#ff1744" />
            <Button
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="+"
                android:textSize="30dp"
                android:layout_gravity="right"
                android:background="#70ffc3"
                android:textAlignment="center"
                android:onClick="incrementBC"/>

        </LinearLayout>

        <!--Chicken Fiesta-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="-"
                android:textSize="30dp"
                android:layout_gravity="left"
                android:background="#ff7674"
                android:textAlignment="center"
                android:onClick="decrementCF"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Chicken Fiesta"
                android:textSize="18dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#ff1744" />
            <Button
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="+"
                android:textSize="30dp"
                android:layout_gravity="right"
                android:background="#70ffc3"
                android:textAlignment="center"
                android:onClick="incrementCF"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/topping_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Extra Toppings"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ffd54f" />

        <CheckBox
            android:id="@+id/cheese_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:text="Extra Cheese"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffd54f" />

        <!--Submitting order-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="submitOrder"
            android:text="Submit Order"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:background="#42ffff"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp" />

        <!--displaying quantity-->
        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/total_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Total : Rs 0"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/tax_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Tax : Rs 0"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
